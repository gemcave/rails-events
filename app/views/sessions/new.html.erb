<header class="content-header">
	<h1><%= t('layouts.header.sign_in')%></h1>
</header>

<%= form_tag(session_path) do %>
	<fieldset>
		<p>
			<%= label_tag t('common.email') %>
			<%= email_field_tag :email, nil, autofocus: true %>
		</p>
		<p>
			<%= label_tag t('common.password') %>
			<%= password_field_tag :password, nil %>
		</p>
		<p>
			<%= submit_tag t('common.sign_in_acc') %>
		</p>
	</fieldset>
<% end %>