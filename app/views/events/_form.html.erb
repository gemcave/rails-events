<%= form_for(@event) do |f| %>
<%= render 'shared/errors', object: @event %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :description %>
        <%= f.text_area :description, cols: 40, rows: 7 %>
      </li>
      <li class="required">
        <%= f.label :location %>
        <%= f.text_field :location, size: 30 %>
      </li>
      <li class="required">
        <%= f.label :price %>
        <%= f.number_field :price, size: 6 %>
      </li>
      <li class="required">
        <%= f.label :starts_at %>
        <%= f.datetime_select :starts_at %>
      </li>
      <li class="required">
        <%= f.label :capacity %>
        <%= f.number_field :capacity, size: 6 %>
      </li>
      <li class="required">
				<%= f.label :main_image %>
				<%= f.file_field :main_image %>
      </li>
			<li>
				<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
			</li>
			<li>
				<select class="selectize" multiple>
					<% Category.all.each do |category| %>
						<option value=<%= "#{category.id}" %>%><%= category.name %></option>
					<% end %>
				</select>
			</li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to t("common.cancel"), events_path, class: 'button' %>
    </p>
  </fieldset>
<% end %>
