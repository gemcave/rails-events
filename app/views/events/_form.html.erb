<%= form_with(model: event, local: true) do |f| %>
	<%= render 'shared/errors', object: event %>

		<%= f.label :name %>
		<%= f.text_field :name, autofocus: true %>

		<%= f.label :description %>
		<%= f.rich_text_area :description %>

		<%= f.label :location %>
		<%= f.text_field :location, size: 30 %>

		<%= f.label :price %>
		<%= f.number_field :price %>

		<%= f.label :starts_at %>
		<%= f.datetime_select :starts_at,{default: Time.now}, {class: "datetime"} %>

		<%= f.label :capacity %>
		<%= f.number_field :capacity %>

		<%= f.label t('common.image_label') %>
		<%= f.file_field :main_image %>

		<%= f.select :category_ids, Category.all.pluck(:name, :id), {}, { multiple: true, class: "selectize" } %>

	
	<%= f.submit %>
	<%= link_to t("common.cancel"), events_path, class: 'button' %>
<% end %>
