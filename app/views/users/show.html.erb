<% content_for(:title, @user.name) %>
<article class="user">
	<header>
		<h1><%= @user.name %></h1>
		<h2><%= @user.email %></h2>
	</header>

	<%= content_for :side do %>
		<% if @liked_events.any? %>
			<h3><%= t('.liked_events') %></h3>
			<ul>
				<% @liked_events.each do |event| %>
					<li>
						<%= link_to event.name, event %>
					</li>
				<% end %>
			</ul>
		<% end %>
	<% end %>

	<% if @registrations.any? %>
		<h3><%= t('.registered_for') %></h3>
		<ul>
			<% @registrations.each do |registration| %>
					<li>
						<%= link_to registration.event.name, registration.event %>
						(<%= time_ago_in_words(registration.created_at) %> ago)
					</li>
			<% end %>
		</ul>
	<% end %>
	<footer>
		<nav>
			<% if current_user?(@user) %>
				
			<%= link_to "#{t('common.edit')} #{t('common.account')}", edit_user_path(@user), class: "button" %>
			<%= link_to "#{t('common.delete')} #{t('common.account')}", @user, 
												method: :delete, 
												data: { confirm: t('common.confirm') },
												class: "button" %>
			<% end %>
		</nav>
	</footer>
</article>