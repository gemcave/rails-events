<header>
	<nav>
	<%= link_to image_tag('logo.png'), root_path %>
	<ul class="left">
      <li>
        <%= link_to "Upcoming", events_path %>
      </li>
      <li>
        <%= link_to "Past", filtered_events_path(:past) %>
      </li>
      <li>
        <%= link_to "Free", filtered_events_path(:free) %>
      </li>
      <li>
        <%= link_to "Recent", filtered_events_path(:recent) %>
      </li>
	</ul>
  <ul class="right">
					<% if current_user %>
						<li><%= link_to "Рус", {locale: :ru}, class: "#{ 'active' if I18n.locale == :ru }"  %></li>
						<li><%= link_to "Eng", {locale: :en}, class: "#{ 'active' if I18n.locale == :en }" %></li>
						<li><%= link_to current_user.name, current_user %></li>
						<li><%= link_to t('.sign_out'), session_path, method: :delete, class: "button" %></li>
					<% else %>
						<li><%= link_to "Рус", {locale: :ru}, class: "#{ 'active' if I18n.locale == :ru }"  %></li>
						<li><%= link_to "Eng", {locale: :en}, class: "#{ 'active' if I18n.locale == :en }" %></li>
						<li><%= link_to t('.sign_up'), signup_path, class: "button" %></li>
						<li><%= link_to t('.sign_in'), new_session_path, class: "button" %></li>
					<% end %>
		</ul>
	</nav>
</header>